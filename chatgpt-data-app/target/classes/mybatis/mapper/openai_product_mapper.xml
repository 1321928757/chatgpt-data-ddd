<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.luckysj.chatgpt.data.infrastructure.dao.IOpenAIProductDao">

    <resultMap id="openAIProductMap" type="com.luckysj.chatgpt.data.infrastructure.po.OpenAIProductPO">
        <id column="id" property="id"/>
        <result column="product_id" property="productId"/>
        <result column="product_name" property="productName"/>
        <result column="product_desc" property="productDesc"/>
        <result column="quota" property="quota"/>
        <result column="price" property="price"/>
        <result column="sort" property="sort"/>
        <result column="is_enabled" property="isEnabled"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="queryProductByProductId" parameterType="java.lang.Integer" resultMap="openAIProductMap">
        SELECT product_id, product_name, product_desc, quota, price, is_enabled
        FROM openai_product
        WHERE product_id = #{productId}
    </select>

    <select id="queryProductList" resultMap="openAIProductMap">
        SELECT product_id, product_name, product_desc, quota, price
        FROM openai_product
        WHERE is_enabled = 1
        ORDER BY sort
    </select>

</mapper>